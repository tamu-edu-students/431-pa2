<p style="color: green"><%= notice %></p>

<div id="movie-details" style="display: flex; flex-direction: column; align-items: center;">
  <table>
    <thead>
      <tr>
        <th>Movie Details</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= render @movie %></td>
      </tr>
      <tr>
        <td>
          <div class="links">
            <%= link_to "Edit this movie", edit_movie_path(@movie, sort: params[:sort], direction: params[:direction]) %> |
            <%= link_to "Back to movies", movies_path(sort: params[:sort], direction: params[:direction]) %>
          </div>
          
        </td>
      </tr>
    </tbody>
  </table>
  <%= button_to "Destroy this movie", @movie, method: :delete %>
</div>
